{
  "name": "regex-app",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run next\" \"npm run electron\"",
    "next": "next dev",
    "electron": "wait-on http://localhost:3000 && electron .",
    "build": "next build && next export && electron-builder",
    "start": "next start",
    "lint": "eslint"
  },
  "build": {
    "appId": "com.myapp.desktop",
    "files": [
      "electron/**/*",
      "out/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  }
}